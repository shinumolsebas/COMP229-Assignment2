<%- include('../partials/header.ejs') %>
 
 <%- include('../partials/main_nav.ejs') %>

<!-- Content for Update page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            
            <h1><%= title %></h1>
            <form class="form " method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Name"
                    name="name" 
                    value="<%= business.Name %>"
                    required>

                </div>
                <div class="form-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter phone number"
                    name="phone" 
                    value="<%= business.Phone %>"
                    required>

                </div>
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                     placeholder="Enter Email address"
                     name="email" 
                    value="<%= business.Email %>"
                     required>

                </div>
                <br>
                <button class="btn btn-primary" type="Submit">
                    <i class="fas fa-edit"></i> Update </button>

            <!--   <button class="btn btn-danger" type="Delete">
                    <i class="fas fa-trash-alt"></i> Delete </button> --> 

                   
                   
            <a href="/business-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

                   

               
                

            </form>
        </div>
    </div>

</div>

<%- include('../partials/bottom_nav.ejs') %>

